<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/title2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:layout_alignTop="@+id/done"
        android:layout_toRightOf="@+id/img"
        android:layout_toEndOf="@+id/img"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/document"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/done"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="visible"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_below="@+id/img"
        android:layout_alignRight="@+id/done"
        android:layout_alignEnd="@+id/done" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/done"
        android:src="@drawable/right"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"

        android:layout_alignBottom="@+id/img"
        android:layout_alignLeft="@+id/title2"
        android:layout_alignStart="@+id/title2" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mo"
        android:layout_alignTop="@+id/size"
        android:layout_toRightOf="@+id/size"
        android:layout_toEndOf="@+id/size"
        android:layout_marginLeft="5dp" />


</RelativeLayout>
